<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mongoose Flights</title>
</head>
<body>
    <div class="topnav">
        <a class="active" href="/flights">All Flights</a>
        <a href="/flights/new">Add Flights</a>
    </div>
    <h1>All Flights</h1>
    <table id="list">
    <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight Number</th>
                <th>Departs</th>
            </tr>
        </thead>
        <tbody>
        <% flights.forEach(function(f) { %>
        <tr>
            <td><%= f.airline %></td>
            <td><%= f.airport %></td>
            <td><%= f.flightNo %></td>
            <td><%= f.departure %></td>
            <td><a href="/flights/<%=f._id %>">Details</a></td>
            </tr>
        <% }); %>
    </body>
</table>
</html>
